                    <settings:BoolSetting SettingName="Hide handles" IsOn="{Binding HideHandles, Mode=TwoWay}" SettingImage="/TCC;component/resources/images/ic_done_white_24dp_2x.png">
                        <settings:BoolSetting.ToolTip>
                            <Grid Margin="5">
