<skills:FixedSkillControlBase x:Class="TCC.Controls.Skills.RhombFixedSkillControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCC.Controls"
             xmlns:skills="clr-namespace:TCC.Controls.Skills"
             mc:Ignorable="d" 
             ClipToBounds="False" Background="Transparent" 
             MouseLeave="UserControl_MouseLeave" d:DataContext="{d:DesignData Cooldown}">
    <UserControl.Resources>
        <ElasticEase x:Key="BounceEase" Oscillations="3" />
        <Storyboard x:Key="WarnShake" RepeatBehavior="Forever">
            <DoubleAnimation Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)"  Duration="0:0:0.1" From="0" To="-5"  EasingFunction="{StaticResource QuadraticEase}"/>
            <DoubleAnimation Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)" BeginTime="0:0:0.1" Duration="0:0:0.9" From="-5" To="0"  EasingFunction="{StaticResource BounceEase}"/>
        </Storyboard>
        <Storyboard x:Key="WarnGlow" RepeatBehavior="Forever" >
            <DoubleAnimation    Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)"  Duration="0:0:0.1" From="0" To="-5"  EasingFunction="{StaticResource QuadraticEase}"/>
            <DoubleAnimation    Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="(RenderTransform).(RotateTransform.Angle)" BeginTime="0:0:0.1" Duration="0:0:0.9" From="-5" To="0"  EasingFunction="{StaticResource BounceEase}"/>
            <DoubleAnimation    Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="Opacity"                Duration="0:0:0.1" From="0" To="1"  EasingFunction="{StaticResource QuadraticEase}"/>
            <DoubleAnimation    Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="Opacity"                BeginTime="0:0:0.1" Duration="0:0:0.6" From="1" To="0"  EasingFunction="{StaticResource QuadraticEase}"/>
            <ThicknessAnimation Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="BorderThickness"                        Duration="0:0:0.1" From="2" To="6" EasingFunction="{StaticResource QuadraticEase}" />
            <ThicknessAnimation Timeline.DesiredFrameRate="25" Storyboard.TargetProperty="BorderThickness"                      BeginTime="0:0:0.1"  Duration="0:0:0.6" From="6" To="2" EasingFunction="{StaticResource QuadraticEase}" />
        </Storyboard>
    </UserControl.Resources>
    <UserControl.LayoutTransform>
        <ScaleTransform ScaleX="1" ScaleY="1"/>
    </UserControl.LayoutTransform>

    <Grid Width="65" Height="65" Margin="2" HorizontalAlignment="Center" Name="MainGrid" ClipToBounds="False" VerticalAlignment="Center">
        <Grid ClipToBounds="False" >
            <Grid RenderTransform="{StaticResource Rotate45}" RenderTransformOrigin=".5 .5" >
                <Rectangle Stroke="#7fff"
                           StrokeThickness="1" Margin="10">
                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=skills:RhombFixedSkillControl}, Path=Warning}"
                                             Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource WarnShake}" x:Name="StartWarning"/>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <StopStoryboard BeginStoryboardName="StartWarning"/>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
            </Grid>

            <Rectangle Width="61" Height="61" x:Name="Icon" Stroke="#7fff" StrokeThickness="0" RenderTransformOrigin=".5 .5"
                       OpacityMask="{StaticResource RhombOpacityMask}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{Binding Skill.IconName, Converter={StaticResource IconNameToPath}}"/>
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <RotateTransform />
                </Rectangle.RenderTransform>
                <Rectangle.Style>
                    <Style TargetType="Rectangle">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=skills:RhombFixedSkillControl}, Path=Warning}"
                                         Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource WarnShake}" x:Name="StartWarning"/>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="StartWarning"/>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Rectangle.Style>

            </Rectangle>
            <Grid ClipToBounds="False" RenderTransform="{StaticResource Rotate45}" RenderTransformOrigin=".5 .5" Margin="0">
                <Border Margin="7" x:Name="WarnArc" Opacity="0" RenderTransformOrigin=".5 .5"
                       BorderBrush="White" BorderThickness="3"  Visibility="Visible"
                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#2fff">
                    <Border.Effect>
                        <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="20"/>
                    </Border.Effect>
                    <Border.RenderTransform>
                        <RotateTransform />
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=skills:RhombFixedSkillControl}, Path=Warning}"
                                         Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource WarnGlow}" x:Name="StartWarning"/>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <StopStoryboard BeginStoryboardName="StartWarning"/>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>
        </Grid>
        <Grid ClipToBounds="True" Width="Auto" Height="Auto" 
              RenderTransform="{StaticResource Rotate45}" 
              RenderTransformOrigin=".5 .5"
              Margin="11">
            <local:Arc x:Name="Arc" 
                   Opacity="1" 
                   UseLayoutRounding="False" 
                   Width="80" 
                   Height="80" 
                   StrokeThickness="40" 
                   Margin="-20" 
                   Stroke="#a000" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   EndAngle="0.01"
                   RenderTransformOrigin=".5 .5">
                <local:Arc.RenderTransform>
                    <RotateTransform Angle="-45"/>
                </local:Arc.RenderTransform>
            </local:Arc>
            <local:Arc x:Name="PreArc" 
                       Opacity="1" 
                       UseLayoutRounding="False" 
                       Width="80" 
                       Height="80" 
                       StrokeThickness="40" 
                       Margin="-20" 
                       Stroke="#9fa0" 
                       EndAngle=".01" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"                   
                       RenderTransformOrigin=".5 .5">
                <local:Arc.RenderTransform>
                    <RotateTransform Angle="-45"/>
                </local:Arc.RenderTransform>

            </local:Arc>
        </Grid>
        <Rectangle RenderTransformOrigin=".5 .5" RenderTransform="{StaticResource Rotate45}" Stroke="White" StrokeThickness="3"
                   Fill="#9fff" Name="Glow" Opacity="0"
                   Margin="8"/>
        <!--<Grid Opacity="0">
            <Rectangle RenderTransformOrigin=".5 .5" RenderTransform="{StaticResource Rotate45}" Stroke="White" StrokeThickness="3"
                   Name="Exp"
                   Margin="8">
                <Rectangle.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:RhombFixedSkillControl}, Path=Warning}"
                                     Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource WarnExpStroke}" x:Name="StartExpStroke"/>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="StartExpStroke"/>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>

                    </Style>
                </Rectangle.Style>

            </Rectangle>
            <Grid.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:RhombFixedSkillControl}, Path=Warning}"
                                     Value="True">
