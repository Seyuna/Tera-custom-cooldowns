<UserControl x:Class="TCC.Controls.Classes.Elements.EdgeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <Style x:Key="Cont" TargetType="UniformGrid">
            <Setter Property="Margin" Value="0 0"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="0" x:Name="Root" Width="Auto">
        <Border Style="{StaticResource DefaultBorderStyle}"
                Height="26" 
                Visibility="Hidden"
                CornerRadius="0,13,0,0" 
                x:Name="BaseBorder" >
        </Border>
        <Grid x:Name="MaxBorder" Margin="2 -2 -6 -2" Opacity="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        <Border Width="Auto"
                Height="Auto"
                CornerRadius="0"
                Background="Red"
                Opacity="1"
                RenderTransform="{StaticResource Skew45Inv}"
                RenderTransformOrigin=".5 .5">
            <Border.Effect>
                <DropShadowEffect Color="Red" ShadowDepth="0" BlurRadius="20" />
            </Border.Effect>
        </Border>
        <Border Width="Auto"
                Height="Auto"
                Grid.Row="1"
                CornerRadius="0"
                Background="Red"
                Opacity="1"
                RenderTransform="{StaticResource Skew45}"
                RenderTransformOrigin=".5 .5">
            <Border.Effect>
                <DropShadowEffect Color="Red" ShadowDepth="0" BlurRadius="20" />
            </Border.Effect>
        </Border>
        </Grid>
        <UniformGrid Width="Auto" 
                     Height="Auto" 
                     Rows="1" 
                     Columns="10" 
                     Opacity="1" 
                     Style="{StaticResource Cont}">
            <UniformGrid.Resources>
                <Style TargetType="Path">
                    <Setter Property="Fill" Value="{StaticResource RevampBackgroundBrush}"></Setter>
                    <Setter Property="Stroke" Value="{StaticResource RevampBorderBrush}"></Setter>
                    <Setter Property="StrokeThickness" Value="1"></Setter>
                    <Setter Property="Width" Value="32"></Setter>
                    <Setter Property="Height" Value="Auto"></Setter>
                    <Setter Property="Margin" Value="0 0 -9 0"></Setter>
                    <Setter Property="Stretch" Value="UniformToFill"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    <Setter Property="Data" Value="M0 0, 1 0, 1.5 .5, 1 1, 0 1, .5 .5, 0 0"></Setter>
                </Style>
            </UniformGrid.Resources>
            <Path />
            <Path />
            <Path />
            <Path />
            <Path />
            <Path />
            <Path />
            <Path />
            <Path />
            <Path />
        </UniformGrid>
        <UniformGrid Width="Auto" 
                     Height="Auto" 
                     Rows="1" 
                     Columns="10" 
                     Opacity="1" 
                     x:Name="EdgeContainer"
                     Style="{StaticResource Cont}">
            <UniformGrid.Resources>
                <Style TargetType="Path">
                    <Setter Property="Opacity" Value="0"></Setter>
                    <Setter Property="Fill" Value="#1fff"></Setter>
                    <Setter Property="Stroke" Value="#2fff"></Setter>
                    <Setter Property="StrokeThickness" Value="1"></Setter>
                    <Setter Property="Width" Value="32"></Setter>
                    <Setter Property="Margin" Value="0 0 -9 0"></Setter>
                    <Setter Property="Height" Value="Auto"></Setter>
                    <Setter Property="Stretch" Value="UniformToFill"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    <Setter Property="Data" Value="M0 0, 1 0, 1.5 .5, 1 1, 0 1, .5 .5, 0 0"></Setter>

                </Style>
            </UniformGrid.Resources>
            <Path Fill="DarkOrange" />
            <Path Fill="DarkOrange"/>
            <Path Fill="DarkOrange"/>
            <Path Fill="DarkOrange"/>
            <Path Fill="DarkOrange"/>
            <Path Fill="DarkOrange"/>
            <Path Fill="DarkOrange"/>
            <Path Fill="OrangeRed"/>
            <Path Fill="DarkOrange"/>
            <Path Fill="DarkOrange" />

        </UniformGrid>
        <UniformGrid Width="Auto" 
                     Height="Auto" 
                     Rows="1" 
                     Columns="10" 
                     Opacity="1" 
                     Style="{StaticResource Cont}">
            <UniformGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#fff"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property="Margin" Value="9 0 -2 0"></Setter>

                </Style>
            </UniformGrid.Resources>
            <TextBlock Text="1" />
            <TextBlock Text="2"/>
            <TextBlock Text="3"/>
            <TextBlock Text="4"/>
            <TextBlock Text="5"/>
            <TextBlock Text="6"/>
            <TextBlock Text="7"/>
            <TextBlock Text="8"/>
            <TextBlock Text="9"/>
            <TextBlock Text="10" />

        </UniformGrid>
    </Grid>

</UserControl>

