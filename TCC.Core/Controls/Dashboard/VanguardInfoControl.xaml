<UserControl x:Class="TCC.Controls.Dashboard.VanguardInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCC.Controls"
             xmlns:vm="clr-namespace:TCC.ViewModels"
             Cursor="Hand" Background="Transparent"
             mc:Ignorable="d" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Loaded="UserControl_Loaded"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown" d:DataContext="{d:DesignData Character}">
    <Border  Margin="0" x:Name="RootBorder" RenderTransformOrigin=".5,.5" 
            UseLayoutRounding="True"  CornerRadius="2" 
            PreviewMouseRightButtonDown="RootBorder_OnPreviewMouseRightButtonDown">
        <Grid Width="Auto" ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="3" Fill="#1fff" Opacity="0" x:Name="Glow"/>
            <Rectangle Grid.ColumnSpan="3" Fill="{StaticResource MainBrush}" Width="3" Margin="0" 
                       HorizontalAlignment="Left" x:Name="Sel" RenderTransformOrigin=".5 .5">
                <Rectangle.RenderTransform>
                    <ScaleTransform ScaleY="0"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Ellipse VerticalAlignment="Top" HorizontalAlignment="Left" Width="10" Height="10" x:Name="Ripple" Opacity="0" RenderTransformOrigin=".5,.5" Fill="#5999" IsHitTestVisible="False">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <TranslateTransform X="0" Y="0" />
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Rectangle Fill="#888" Height="36" Width="36" Grid.RowSpan="1" 
                       Margin="7 2 2 2" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Rectangle.OpacityMask>
                    <ImageBrush ImageSource="{Binding Class, Converter={StaticResource ClassToImageConverter}}" />
                </Rectangle.OpacityMask>
            </Rectangle>
            <TextBlock Grid.Column="1" Text="{Binding Name}" Grid.RowSpan="1" HorizontalAlignment="Left" 
                       VerticalAlignment="Center" FontSize="16" Margin="5 0" Foreground="#ddd"></TextBlock>
            <!--<Grid HorizontalAlignment="Stretch" Margin="0,2,0,0" Grid.Row="2" Grid.ColumnSpan="3" ToolTip="Vanguard Credits">
                <Rectangle Height="3" Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}" Fill="#1fff" HorizontalAlignment="Stretch"></Rectangle>
                <Rectangle x:Name="creditsRect" Height="3" 
                           Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}" 
                           Fill="Orange"  Opacity=".8"
                           HorizontalAlignment="Left">
                    <Rectangle.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding Credits, Converter={StaticResource ValueToFactor}, ConverterParameter=9000}" CenterX="0"/>
                    </Rectangle.LayoutTransform>
                </Rectangle>
            </Grid>-->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" Grid.RowSpan="3"
                        Orientation="Horizontal" HorizontalAlignment="Right">
                <!--Elleon mark-->
                <Grid Margin="5 0" Background="Transparent" ToolTip="Elleon's Marks of Valor."
                  HorizontalAlignment="Right" VerticalAlignment="Center" 
                      >
                      <!--Visibility="{Binding Source={x:Static vm:InfoWindowViewModel.Instance},
                    Path=ShowElleonMarks, Converter={StaticResource BoolToVisibleCollapsed}}"-->
                    <Ellipse Fill="{StaticResource MarksBrush}" Opacity=".2" Margin="2"></Ellipse>
                    <Viewbox StretchDirection="DownOnly" Width="19">
                        <TextBlock Text="{Binding ElleonMarks}" 
                                   Foreground="{StaticResource MarksBrush}" 
                                   TextAlignment="Center" FontSize="15" VerticalAlignment="Center"></TextBlock>
                    </Viewbox>
                    <local:Arc x:Name="ElleonArc"
                           Width="30" 
                           Height="30" 
                           Stroke="{StaticResource MarksBrush}" 
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".8"
                           EndAngle="{Binding ElleonMarks, Converter={StaticResource FactorToAngle}, ConverterParameter=1000}"

                           />
                </Grid>
                <!--Guardian credits-->
                <Grid Margin="5 0" Background="Transparent" ToolTip="Guardian Legion credits."
                  HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <Ellipse Fill="{StaticResource ArcaneBrush}" Opacity=".2" Margin="2"/>
                    <Viewbox StretchDirection="DownOnly" Width="19">
                        <TextBlock Text="{Binding GuardianCredits, Converter={StaticResource GuardianPointsStringConverter}}"
                                   Foreground="{StaticResource ArcaneBrush}" 
                                   TextAlignment="Center" FontSize="15" VerticalAlignment="Center"/>
                    </Viewbox>
                    <local:Arc x:Name="GuardianCreditsArc"
                           Width="30" 
                           Height="30" 
                           Stroke="{StaticResource ArcaneBrush}" 
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".8"
                           EndAngle="{Binding GuardianCreditsFactor, Converter={StaticResource FactorToAngle}}"
                           />
                </Grid>
                <!--Guardian quests-->
                <Grid Margin="5 0" Background="Transparent" ToolTip="Claimed Guardian quests."
                  HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <Ellipse Fill="{StaticResource FireBrush}" Opacity=".2" Margin="2"></Ellipse>
                    <Viewbox StretchDirection="DownOnly" Width="19">
                        <TextBlock Text="{Binding ClaimedGuardianQuests}"
                                   Foreground="{StaticResource FireBrush}" 
                                   TextAlignment="Center" FontSize="15" VerticalAlignment="Center"></TextBlock>
                    </Viewbox>
                    <local:Arc x:Name="GuardianArc"
                           Width="30" 
                           Height="30" 
                           Stroke="{StaticResource FireBrush}" 
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".8"
                           EndAngle="{Binding GuardianCompletion, Converter={StaticResource FactorToAngle}}"
                           />
                </Grid>
                <!--Vanguard credits-->
                <Grid Margin="5 0" Background="Transparent" ToolTip="Vanguard credits."
                  HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <Ellipse Fill="{StaticResource ArcaneBrush}" Opacity=".2" Margin="2"/>
                    <Viewbox StretchDirection="DownOnly" Width="19">
                        <TextBlock Text="{Binding VanguardCredits, Converter={StaticResource GuardianPointsStringConverter}}"
                                   Foreground="{StaticResource ArcaneBrush}" 
                                   TextAlignment="Center" FontSize="15" VerticalAlignment="Center"/>
                    </Viewbox>
                    <local:Arc x:Name="VanguardCreditsArc"
                           Width="30" 
                           Height="30" 
                           Stroke="{StaticResource ArcaneBrush}" 
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".8"
                           EndAngle="{Binding VanguardCreditsFactor, Converter={StaticResource FactorToAngle}}"
                           />
                </Grid>

                <!--Daily-->
                <Grid Margin="5 0" Background="Transparent" 
                  HorizontalAlignment="Right" VerticalAlignment="Center" ToolTip="Completed daily Vanguard quests.">
                    <Ellipse Fill="{StaticResource FireBrush}" Opacity=".2" Margin="2"></Ellipse>
                    <TextBlock Text="{Binding VanguardDailiesDone}" Foreground="{StaticResource FireBrush}" TextAlignment="Center" FontSize="15" VerticalAlignment="Center"></TextBlock>
                    <local:Arc x:Name="DailyArc"
                           Width="30" 
                           Height="30" 
                           Stroke="{StaticResource FireBrush}"
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".8"
                           EndAngle="{Binding VanguardDailyCompletion, Converter={StaticResource FactorToAngle}}"
                           />
                </Grid>
                <!--Weekly-->
                <Grid Margin="5 0" Background="Transparent" 
                  HorizontalAlignment="Right" VerticalAlignment="Center"  ToolTip="Completed weekly Vanguard quests.">
                    <Ellipse Fill="{StaticResource FireBrushLight}" Opacity=".2" Margin="2"/>
                    <TextBlock Text="{Binding VanguardWeekliesDone}" Foreground="{StaticResource FireBrushLight}" TextAlignment="Center" FontSize="15" VerticalAlignment="Center"></TextBlock>
                    <local:Arc x:Name="WeeklyArc"
                           Width="30" 
                           Height="30" 
                           Stroke="{StaticResource FireBrushLight}" 
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".8"
                           EndAngle="{Binding VanguardWeeklyCompletion, Converter={StaticResource FactorToAngle}}"
                           ToolTip="Completed weekly Vanguard quests."
                           />
                </Grid>
            </StackPanel>
        </Grid>
