                           Grid.Column="0"
                           Grid.ColumnSpan="2"/>
                <local:Arc x:Name="weeklyArc"
                           Width="60" 
                           Height="60" 
                           Stroke="#0d47a1 " 
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".7" 
                           EndAngle="{Binding VanguardWeeklyCompletion, Converter={StaticResource FactorToAngle}}"
                           ToolTip="Completed weekly Vanguard quests."
                           Grid.Column="0"
                           Grid.ColumnSpan="2"/>

                <local:Arc x:Name="dailyArc" Visibility="Visible"
                           Width="50" 
                           Height="50" 
                           Stroke="#2196f3" 
                           StrokeThickness="3" 
                           Margin="0" 
                           Opacity=".6" 
                           EndAngle="{Binding VanguardDailyCompletion, Converter={StaticResource FactorToAngle}}"
                           ToolTip="Completed daily Vanguard quests."
                           Grid.Column="0"
                           Grid.ColumnSpan="2"/>


                <TextBlock FontSize="20" 
                           Visibility="Visible"
                           Margin="0,0,0,0" 
                           FontWeight="Thin" 
                           Foreground="#2196f3" 
                           Text="{Binding VanguardDailiesDone}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Bottom"
                           ToolTip="Completed daily Vanguard quests."
                           Grid.Column="0"
                           Grid.Row="1"/>

                <TextBlock FontSize="20" 
                           Margin="0,0,0,0" 
                           FontWeight="Thin" 
                           Foreground="#0d47a1" 
                           Text="{Binding VanguardWeekliesDone}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Bottom"
                           ToolTip="Completed weekly Vanguard quests."
                           Grid.Column="1"
                           Grid.Row="1"/>
            </Grid>

            <Grid HorizontalAlignment="Stretch" Margin="0,2,0,2">
                <Rectangle Height="2" Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}" Fill="#1000" HorizontalAlignment="Stretch"></Rectangle>
                    <Rectangle x:Name="creditsRect" Height="2" Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}}" Fill="Orange"  HorizontalAlignment="Left">
                    <Rectangle.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding Path=Credits, Converter={StaticResource ValueToFactor}, ConverterParameter=9000}" CenterX="0"/>
                    </Rectangle.LayoutTransform>

                </Rectangle>

            </Grid>
            <TextBlock Text="{Binding Credits}" HorizontalAlignment="Center" Foreground="#8000" Margin="0,0,0,3"></TextBlock>
        </StackPanel>
        </Grid>-->

        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity=".3"/>
        </Border.Effect>
        <Border.RenderTransform>
            <TranslateTransform Y="0"/>
        </Border.RenderTransform>
    </Border>

</UserControl>
