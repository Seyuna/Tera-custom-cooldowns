                           Text="{Binding Name}" 
                           TextTrimming="CharacterEllipsis"/>
            </Grid>

            <Grid UseLayoutRounding="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition  />
                </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                <Rectangle Width="38" Height="38" 
                           Fill="Black" Opacity=".2" RenderOptions.BitmapScalingMode="Fant" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Grid.Column="0" Grid.ColumnSpan="2">
                    <Rectangle.OpacityMask>
                        <ImageBrush ImageSource="{Binding Class, Converter={StaticResource ClassToImageConverter}}" />
                    </Rectangle.OpacityMask>
                </Rectangle>

                <local:Arc Width="60" 
                           Height="60" 
                           Stroke="#1000" 
                           StrokeThickness="3" 
                           EndAngle="359.99" 
