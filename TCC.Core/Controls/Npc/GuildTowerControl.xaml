<UserControl x:Class="TCC.Controls.NPCs.GuildTowerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TCC.Controls"
             xmlns:npc="clr-namespace:TCC.Data.NPCs"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance npc:NPC}">
<Border Style="{StaticResource DefaultBorderStyle}" Padding="0" Margin="5" 
        CornerRadius="0,10,0,0" UseLayoutRounding="True" >
        <StackPanel Margin="0">

            <Grid Height="36">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
            <Image Source="{Binding GuildId, Converter={StaticResource LogoInfoToImage}}" 
                   Width="36"
                   Margin="0"
                   Stretch="Uniform"
                   Grid.Row="0"
                   VerticalAlignment="Top"

               />
        <Grid HorizontalAlignment="Stretch"
              Grid.Column="1" 
              Margin="2,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock VerticalAlignment="Center"
                       FontSize="18"
                       Grid.RowSpan="2" 
                       Foreground="White"
                       HorizontalAlignment="Left"
                       FontWeight="Thin"
                       TextAlignment="Center"
                       Text="{Binding Name}"
                       Margin="0,0,0,0" />
            <TextBlock VerticalAlignment="Center" 
                       HorizontalAlignment="Right" 
                       Grid.Column="1"
                       Grid.Row="0"
                       FontSize="16" 
                       Foreground="#cfff" 
                       FontWeight="DemiBold" 
                       TextAlignment="Left"
                       Margin="0,0,0,0" >
                <Run Text="{Binding HPFactor, Mode=OneWay, StringFormat={}{0:##%}}"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,-4,2,0"
                       Grid.Column="1"
                       Grid.Row="1"
                       >
                <Run Text="{Binding CurrentHP, StringFormat={}{0:0,#}, Mode=OneWay}" 
                     FontSize="10"
                     
                     Foreground="#7fff"/>
            </TextBlock>

            </Grid>
        <local:GenericGauge BarColor="Orange" 
                                Height="2"
                                Grid.Column="1"
                                Margin="0,0,0,0" 
                                CurrentVal="{Binding CurrentHP}" 
                                MaxVal="{Binding MaxHP}" 
                                ShowName="False" 
                                ShowValues="False" 
                                ShowPercentage="False" 
                                VerticalAlignment="Bottom"/>
    </Grid>
        </StackPanel>
</Border>
</UserControl>
